<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wardrope"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/logo"
        android:theme="@android:style/Animation" >
        <activity
            android:name="com.example.wardrope.HomeScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.wardrope.AddScreen"
            android:label="@string/title_activity_add_screen" >
        </activity>
        <activity
            android:name="com.example.wardrope.MatchScreen"
            android:label="@string/title_activity_match_screen" >
        </activity>
        <activity
            android:name="com.example.wardrope.TestAct"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="com.example.wardrope.SearchScreen"
            android:label="@string/title_activity_search_screen" >
        </activity>
        <activity
            android:name="com.example.wardrope.ViewScreen"
            android:label="@string/title_activity_view_screen" >
        </activity>
    </application>

</manifest>